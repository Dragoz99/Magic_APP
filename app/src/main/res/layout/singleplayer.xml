                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addWhiteMana"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ic_turn_icon" />

            <TextView
                android:id="@+id/textViewTurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLessTurn"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="lessTurn"
                android:text="-"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnPlusTurn"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addTurn"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ic_black_mana_icon_foreground" />

            <TextView
                android:id="@+id/textViewBlackMana"
                android:layout_width="wrap_content"
