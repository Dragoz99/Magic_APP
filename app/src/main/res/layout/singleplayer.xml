                android:onClick="addBlueMana"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/storm___icon" />

            <TextView
                android:id="@+id/textViewStorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLessStorm"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="lessStrom"
                android:text="-"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnPlusStorm"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addStorm"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ic_white_mana_icon_foreground" />

            <TextView
