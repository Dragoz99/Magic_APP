<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnTimeSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="385dp"
        android:layout_height="272dp"
        app:layout_constraintBottom_toTopOf="@+id/btnTimeSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ic_red_mana_icon_round" />

            <TextView
                android:id="@+id/textViewRedMana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLessRed"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="lessRedMana"
                android:text="-"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnPlusRed"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addRedMana"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/infect_counter_foreground" />

            <TextView
                android:id="@+id/textViewInfect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLessInfect"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="lessInfect"
                android:text="-"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnPlusInfect"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addInfect"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ic_blue_mana_icon_round" />

            <TextView
                android:id="@+id/textViewBlueMana"
                android:layout_width="wrap_content"
