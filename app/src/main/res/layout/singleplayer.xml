                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/green_mana_round" />

            <TextView
                android:id="@+id/textViewGreenMana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLessGreen"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="lessGreenMana"
                android:text="-"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnPlusGreen"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addGreenMana"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="33dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ic_colorless_mana_foreground" />

            <TextView
                android:id="@+id/textViewColorlessMana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLessColorless"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="lessColorLess"
                android:text="-"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnPlusColorless"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="addColorLess"
                android:text="+"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/LifeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="30dp"
        android:text=""
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/addLifeBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/lessLifeBTN"
        android:layout_width="115dp"
        android:layout_height="83dp"
        android:lineSpacingExtra="20sp"
        android:onClick="lessLife"
        android:text="-"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addLifeBTN"
        android:layout_width="101dp"
        android:layout_height="83dp"
        android:onClick="addLife"
        android:text="+"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toStartOf="@+id/resetBTN"
        app:layout_constraintStart_toEndOf="@+id/lessLifeBTN" />

    <Button
        android:id="@+id/resetBTN"
        android:layout_width="90dp"
        android:layout_height="83dp"
        android:onClick="resetSinglePlayer"
        android:text="Reset"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnOpenHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cronologia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOpenHistory"
        app:layout_constraintStart_toEndOf="@+id/btnTimeSet"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>